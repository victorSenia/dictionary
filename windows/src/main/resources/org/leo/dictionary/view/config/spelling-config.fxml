<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.leo.dictionary.controller.config.SpellingConfigController"
          hgap="10" vgap="10">

    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>

    <Label text="Active:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <CheckBox fx:id="activeCheck" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Each Time:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <CheckBox fx:id="eachTimeCheck" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Delay (ms):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="delayField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Letter Delay (ms):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="letterDelayField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>
