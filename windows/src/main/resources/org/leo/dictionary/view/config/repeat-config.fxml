<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.leo.dictionary.controller.config.RepeatConfigController"
          hgap="10" vgap="10">

    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>

    <Label text="Times:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="timesField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Delay (ms):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="delayField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
</GridPane>
