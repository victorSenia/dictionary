<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.leo.dictionary.controller.config.GeneralConfigController"
          hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>

    <Label text="Knowledge Increase:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="knowledgeIncreaseField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Delay Before (ms):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="delayBeforeField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Delay Per Letter After (ms):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="delayPerLetterAfterField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Include Known Words:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <CheckBox fx:id="includeKnownCheck" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Include Article:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <CheckBox fx:id="includeArticleCheck" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

</GridPane>
